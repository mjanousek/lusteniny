---
import { classNames } from '../../utils';

interface Props {
  variant: 'light' | 'dark';
  text: string;
}
---

<span
  class={classNames(
    'mb-4 inline-block rounded-full bg-gradient-to-b  px-3.5 py-px text-xs uppercase leading-5 tracking-wide text-white',
    Astro.props.variant === 'light' ? 'bg-green-600' : 'bg-green-700',
  )}
>
  {Astro.props.text}
</span>
