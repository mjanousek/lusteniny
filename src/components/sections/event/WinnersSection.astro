---
export type Props = {
  winners: string[];
};
---

<section class="bg-white pt-12 pb-24">
  <div class="container mx-auto px-4 py-16 sm:px-8 md:px-12 md:py-12 lg:py-8 xl:py-4">
    <h2 class="mb-16 text-center text-2xl font-bold text-gray-900 sm:text-3xl md:text-4xl lg:text-5xl">Vítězné týmy</h2>
    <ol class="mx-auto grid max-w-5xl justify-center gap-16 md:grid-cols-3">
      {
        Astro.props.winners.map((winner, index) => (
          <li class="group flex flex-col items-center rounded-lg border-2 border-green-500 p-8 shadow shadow-green-500/20 transition duration-500  hover:shadow-lg hover:shadow-green-500/30">
            <div class="mb-6 -mt-14 flex h-12 w-12 items-center justify-center rounded-full border-2 border-green-500 bg-white text-xl font-bold text-green-600 sm:-mt-16 sm:h-16 sm:w-16 sm:text-3xl">
              {index + 1}
            </div>
            <div class="font-medium text-gray-900 sm:text-lg lg:text-xl">{winner}</div>
          </li>
        ))
      }
    </ol>
  </div>
</section>
