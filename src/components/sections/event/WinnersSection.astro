---
import Heading from "@components/atoms/Heading.astro";
import Pattern from "@components/atoms/Pattern.astro";
import Wave from "@components/atoms/Wave.astro";
import tailwindColors from "tailwindcss/colors";

export type Props = {
  winners: string[];
};
---

<Wave class="mt-6 -mb-px w-full rotate-180 text-slate-800 md:mt-8 lg:mt-10 xl:mt-12" />
<section class="relative mx-auto overflow-hidden bg-slate-800" id="vitezove">
  <Pattern
    class="absolute top-[50%] left-0 -translate-y-1/2"
    backgroundColor={tailwindColors.slate[800]}
    lineColor={tailwindColors.slate[700]}
    spotColor={tailwindColors.slate[800]}
    width={1440}
    height={992}
    id="announecement"
  />
  <div class="relative container mx-auto space-y-12 px-4 py-12 text-center">
    <Heading level={2} text="Vítězné týmy" variant="dark" />
    <ol class="mx-auto grid max-w-6xl justify-center gap-x-8 gap-y-6 md:grid-cols-3">
      <li
        class="order-1 flex flex-col items-center justify-center gap-4 rounded-lg bg-gradient-to-b from-green-500 to-green-600 px-8 py-6 font-medium text-slate-100 shadow shadow-green-800/30 md:order-2"
      >
        <div class="text-lg">
          {Astro.props.winners[0]}
        </div>
        <div class="text-3xl font-bold">1.</div>
      </li>
      <li
        class="order-2 flex flex-col items-center justify-center gap-4 rounded-lg bg-gradient-to-b from-green-500 to-green-700 px-8 py-6 font-medium text-slate-200 shadow shadow-green-800/30 md:order-1"
      >
        <div class="text-lg">
          {Astro.props.winners[1]}
        </div>
        <div class="text-3xl font-bold">2.</div>
      </li>
      <li
        class="order-3 flex flex-col items-center justify-center gap-4 rounded-lg bg-gradient-to-b from-green-600 to-green-800 px-8 py-6 font-medium text-slate-200 shadow shadow-green-800/30"
      >
        <div class="text-lg">
          {Astro.props.winners[2]}
        </div>
        <div class="text-3xl font-bold">3.</div>
      </li>
    </ol>
  </div>
</section>
<Wave class="-mt-px mb-6 w-full text-slate-800 md:mb-8 lg:mb-10 xl:mb-12" />
