---
export type Props = {
  bonusInformation?: {
    title: string;
    text: string;
  }[];
};

const { bonusInformation } = Astro.props;
---

{
  bonusInformation ? (
    <section class="bg-white py-24">
      <div class="container mx-auto max-w-7xl px-4  sm:px-8 md:px-12">
        <header class="mx-auto mb-16 max-w-2xl text-center">
          <h2 class="mb-4 text-center text-2xl font-bold text-gray-900 sm:text-3xl md:text-4xl lg:text-5xl">
            Bonusové informace k šifám
          </h2>
          <p class="mb-12 text-center font-medium leading-relaxed text-gray-700 sm:mb-20">
            Každá šifra obsahuje menší, či delší doplňující informaci, která se váže buď s danou šifrou, nebo se
            stanovištěm šifry.
          </p>
        </header>
        {bonusInformation.map((bonusInformation) => (
          <div class="mb-12">
            <h3 class="mb-3 text-2xl font-semibold">{bonusInformation.title}</h3>
            <div class="space-y-2">
              {bonusInformation.text.split("\n").map((line) => (
                <p class="whitespace-pre-wrap text-sm leading-loose text-gray-700 transition hover:text-gray-800 sm:text-base sm:leading-relaxed">
                  {line}
                </p>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>
  ) : (
    <section class="bg-white py-24">
      <div class="container mx-auto mb-16 max-w-7xl px-4 text-center sm:px-8 md:px-12 ">
        <h2 class="mb-4 text-center text-2xl font-bold text-gray-900 sm:text-3xl md:text-4xl lg:text-5xl">
          Bonusové informace k šifám
        </h2>
        <p class="mb-8 font-medium text-gray-700 md:text-lg">
          Tento ročník bohužel neobsahoval žádné bonusové informace k šifrám.
        </p>
      </div>
    </section>
  )
}
