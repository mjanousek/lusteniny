---
import Layout from "../components/Layout.astro";
import ContactSection from "../components/sections/ContactSection.astro";
import EventsSection from "../components/sections/EventsSection.astro";
import FeaturesSection from "../components/sections/FeaturesSection.astro";
import HeroSection from "../components/sections/HeroSection.astro";
import PhotosSection from "../components/sections/PhotosSection.astro";

const metaTags = {
  title: "Luštěniny | Šifrovací hra ve Zlíně",
  description:
    "Luštěniny jsou tradiční šifrovací hra pořádána v centru Zlína, které se můžeš zúčastnit jak v týmu, tak sám. Neváhej a přijd si k nám zaluštit.",
};
---

<Layout {...metaTags} hasAlternativeHeader>
  <HeroSection />
  <FeaturesSection />
  <PhotosSection />
  <EventsSection />
  <ContactSection />
</Layout>
